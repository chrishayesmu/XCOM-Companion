{
  "name": "xcom-companion",
  "productName": "XCOM Companion",
  "description": "An application to use alongside XCOM: Enemy Within's Long War 1.0 mod.",
  "version": "0.8.2",
  "main": "main.js",
  "bin": "cli.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder build --win --publish never",
    "publish": "electron-builder build --win --publish always",
    "prepack": "check-for-leaks",
    "prepush": "check-for-leaks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrishayesmu/XCOM-Companion.git"
  },
  "build": {
    "generateUpdatesFilesForAllChannels": true
  },
  "author": "Chris Hayes",
  "devDependencies": {
    "@octokit/rest": "^16.3.2",
    "check-for-leaks": "^1.2.1",
    "devtron": "^1.3.0",
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-winstaller": "^2.2.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.0.2",
    "request": "^2.70.0",
    "rimraf": "^2.5.2",
    "signcode": "^0.5.0",
    "spectron": "^5.0.0",
    "standard": "^8.2.0",
    "tap": "^14.10.6"
  },
  "dependencies": {
    "@egjs/hammerjs": "^2.0.0",
    "component-emitter": "^1.3.0",
    "electron-log": "^4.3.4",
    "electron-settings": "^4.0.2",
    "electron-updater": "^4.3.8",
    "glob": "^7.1.0",
    "highlight.js": "^10.4.1",
    "keycharm": "^0.2.0 || ^0.3.0 || ^0.4.0",
    "lzutf8": "^0.6.0",
    "timsort": "^0.3.0",
    "update-electron-app": "^1.1.1",
    "uuid": "^8.3.2",
    "vis-data": "^7.0.0",
    "vis-network": "^9.0.4",
    "vis-util": "^5.0.1"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
